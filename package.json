{
  "name": "kairo-ai-browser",
  "version": "1.0.0",
  "description": "Local-First AI Browser with Direct Internet Access",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "electron": "electron . --no-sandbox",
    "electron-dev": "NODE_ENV=development electron . --no-sandbox",
    "dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.kairo.ai-browser",
    "productName": "Kairo AI Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/build/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "frontend/build",
        "to": "frontend/build"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "node-fetch": "^3.3.2",
    "puppeteer-core": "^24.17.0",
    "sqlite3": "^5.1.7"
  }
}
