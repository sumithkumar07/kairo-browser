{
  "name": "kairo-ai-browser-electron",
  "version": "1.0.0",
  "description": "Kairo AI Browser - Local-First Architecture with Native Chromium",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --windows",
    "build-mac": "electron-builder --macos", 
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "browser",
    "ai",
    "automation",
    "chromium",
    "local-first"
  ],
  "author": "Kairo AI",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0",
    "electron-updater": "^6.1.7",
    "axios": "^1.6.0",
    "sqlite3": "^5.1.6",
    "node-json-db": "^2.3.0",
    "groq-sdk": "^0.4.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2"
  },
  "build": {
    "appId": "com.kairo.ai-browser",
    "productName": "Kairo AI Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "services/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "assets/icon.png", 
      "target": "AppImage"
    }
  }
}