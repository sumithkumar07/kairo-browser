{
  "name": "kairo-browser-local-first",
  "version": "1.0.0",
  "description": "Kairo AI Browser - Local-First Architecture",
  "main": "electron/main.js",
  "private": true,
  "homepage": "./",
  "scripts": {
    "start": "electron electron/main.js",
    "dev": "NODE_ENV=development electron electron/main.js",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "cd ../frontend && npm run build && cp -r build ../local-first/renderer/",
    "build:electron": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "install:playwright": "npx playwright install chromium",
    "postinstall": "npm run install:playwright"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "playwright": "^1.40.0",
    "uuid": "^9.0.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.kairoai.browser",
    "productName": "Kairo AI Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "orchestrator/**/*",
      "sync/**/*",
      "renderer/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": {
    "name": "Kairo AI",
    "email": "support@kairoai.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kairoai/browser-local-first"
  },
  "keywords": [
    "browser",
    "ai",
    "automation",
    "local-first",
    "desktop"
  ]
}
