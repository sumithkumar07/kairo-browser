# Kairo AI Browser - Local-First Configuration

# ==============================================
# AI INTEGRATION (Optional but recommended)
# ==============================================

# Groq API Key for enhanced AI capabilities
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Alternative AI providers (choose one)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# ==============================================
# CLOUD SYNC (Optional - for preferences only)
# ==============================================

# Cloud sync server URL (if using custom server)
KAIRO_SYNC_URL=https://sync.kairoai.com

# User identification for sync
KAIRO_USER_ID=your_user_id

# Sync API key (different from AI keys)
KAIRO_SYNC_API_KEY=your_sync_key

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================

# Environment mode
NODE_ENV=development

# Debug level (error, warn, info, debug)
DEBUG_LEVEL=info

# Enable detailed logging
ENABLE_DETAILED_LOGS=true

# ==============================================
# BROWSER ENGINE SETTINGS
# ==============================================

# Chromium executable path (auto-detected if not set)
# CHROMIUM_EXECUTABLE_PATH=/usr/bin/chromium

# Browser window settings
DEFAULT_WINDOW_WIDTH=1400
DEFAULT_WINDOW_HEIGHT=900

# Enable hardware acceleration
ENABLE_HARDWARE_ACCELERATION=true

# ==============================================
# PRIVACY & SECURITY
# ==============================================

# Local data encryption (recommended)
ENABLE_LOCAL_ENCRYPTION=true

# Telemetry (set to false for maximum privacy)
ENABLE_TELEMETRY=false

# ==============================================
# PERFORMANCE TUNING
# ==============================================

# Maximum concurrent workflows
MAX_CONCURRENT_WORKFLOWS=3

# AI context memory size
AI_CONTEXT_MEMORY_SIZE=10

# Browser automation timeout (ms)
BROWSER_TIMEOUT=30000

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable voice commands (requires microphone)
ENABLE_VOICE_COMMANDS=false

# Enable image analysis
ENABLE_IMAGE_ANALYSIS=false

# ==============================================
# NOTES
# ==============================================

# 1. Only GROQ_API_KEY is required for AI features
# 2. All other settings are optional
# 3. The app works fully offline without any keys
# 4. Cloud sync is optional - everything works locally
# 5. Remove or comment out unused variables